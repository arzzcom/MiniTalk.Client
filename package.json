{
	"id":"com.moimz.minitalk.client",
	"title":"Minitalk",
	"version":"7.0.0",
	"dependencies":{
		"php":"5.3.3",
		"mysql":"5.0.0",
		"curl":"*",
		"encrypt":"*"
	},
	"requirements":{
	},
	"directories":{
		"attachments":"0707",
		"configs":"0707",
		"logs":"0707"
	},
	"language":"ko",
	"configs":["key","db"],
	"preset":"Minitalk",
	"databases":{
		"admin_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"user_id":{
					"type":"varchar",
					"length":20,
					"comment":"관리자 아이디"
				},
				"password":{
					"type":"char",
					"length":65,
					"comment":"관리자 패스워드"
				},
				"nickname":{
					"type":"varchar",
					"length":20,
					"comment":"관리자 닉네임"
				},
				"language":{
					"type":"char",
					"length":2,
					"comment":"관리자 언어셋"
				},
				"permission":{
					"type":"text",
					"comment":"관리자 권한"
				},
				"latest_login":{
					"type":"int",
					"length":11,
					"comment":"마지막 접속시각"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"user_id":"unique",
				"nickname":"unique"
			},
			"auto_increment":"idx",
			"comment":"미니톡 클라이언트 관리자 테이블"
		},
		"broadcast_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"type":{
					"type":"enum",
					"length":"'NOTICE','MESSAGE'",
					"default":"MESSAGE",
					"comment":"메세지종류"
				},
				"message":{
					"type":"varchar",
					"length":255,
					"comment":"메세지내용"
				},
				"receiver":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"메세지를 받은 접속자수"
				},
				"url":{
					"type":"varchar",
					"length":255,
					"is_null":true,
					"comment":"링크주소"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"메세지를 전송한 시각"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"reg_date":"index"
			},
			"auto_increment":"idx",
			"comment":"미니톡 브로드캐스트 전송기록 테이블"
		},
		"category_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"parent":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"상위카테고리 고유값"
				},
				"category":{
					"type":"varchar",
					"length":11,
					"comment":"카테고리명"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"parent":"index"
			},
			"auto_increment":"idx",
			"comment":"미니톡 카테고리 테이블"
		},
		"channel_table":{
			"columns":{
				"channel":{
					"type":"varchar",
					"length":32,
					"comment":"채널명"
				},
				"category1":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"1차 카테고리 고유값"
				},
				"category2":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"2차 카테고리 고유값"
				},
				"title":{
					"type":"varchar",
					"length":50,
					"comment":"채널타이틀"
				},
				"user":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"접속자수"
				},
				"max_user":{
					"type":"int",
					"length":11,
					"default":2000,
					"comment":"최대접속자수"
				},
				"server":{
					"type":"varchar",
					"length":100,
					"is_null":true,
					"comment":"서버접속정보"
				},
				"allow_nickname_edit":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"TRUE",
					"comment":"닉네임변경 가능여부"
				},
				"send_level_limit":{
					"type":"int",
					"length":"11",
					"default":0,
					"comment":"데이터전송 권한"
				},
				"userlist_level_limit":{
					"type":"int",
					"length":"11",
					"default":0,
					"comment":"유저목록에 보일 최소권한"
				},
				"box_level_limit":{
					"type":"int",
					"length":"11",
					"default":1,
					"comment":"개인박스개설 권한"
				},
				"password":{
					"type":"varchar",
					"length":30,
					"is_null":true,
					"comment":"채널패스워드"
				},
				"guest_name":{
					"type":"varchar",
					"length":10,
					"default":"Guest",
					"comment":"손님닉네임"
				},
				"extras":{
					"type":"longtext",
					"is_null":true,
					"comment":"추가설정변수"
				}
			},
			"indexes":{
				"channel":"primary_key",
				"category1":"index",
				"category2":"index"
			},
			"comment":"미니톡 채널 테이블"
		},
		"ipban_table":{
			"columns":{
				"ip":{
					"type":"varchar",
					"length":15,
					"comment":"차단아이피"
				},
				"nickname":{
					"type":"varchar",
					"length":20,
					"is_null":true,
					"comment":"차단당시닉네임"
				},
				"memo":{
					"type":"varchar",
					"length":255,
					"is_null":true,
					"comment":"차단사유"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"차단일시"
				}
			},
			"indexes":{
				"ip":"primary_key",
				"reg_date":"index"
			},
			"comment":"미니톡 아이피차단 테이블"
		},
		"log_file_table":{
			"columns":{
				"file":{
					"type":"varchar",
					"length":100,
					"comment":"로그파일명"
				},
				"date":{
					"type":"date",
					"comment":"로그일자"
				},
				"channel":{
					"type":"varchar",
					"length":32,
					"comment":"로그채널명"
				},
				"size":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"로그파일크기"
				}
			},
			"indexes":{
				"file":"primary_key",
				"date":"index",
				"channel":"index"
			},
			"comment":"미니톡 채팅로그파일 테이블"
		},
		"log_table":{
			"columns":{
				"time":{
					"type":"bigint",
					"length":15,
					"comment":"메세지 전송시각"
				},
				"channel":{
					"type":"varchar",
					"length":32,
					"comment":"채널명"
				},
				"nickname":{
					"type":"varchar",
					"length":20,
					"comment":"접속자닉네임"
				},
				"ip":{
					"type":"varchar",
					"length":15,
					"comment":"접속자아이피"
				},
				"message":{
					"type":"varchar",
					"length":255,
					"comment":"메세지내용"
				}
			},
			"indexes":{
				"time,channel,nickname":"primary_key",
				"channel,time":"index",
				"nickname":"index",
				"ip":"index"
			},
			"comment":"미니톡 채팅로그 테이블"
		},
		"server_table":{
			"columns":{
				"domain":{
					"type":"varchar",
					"length":100,
					"comment":"미니톡 서버의 도메인주소 또는 채팅호스팅 클라이언트 아이디"
				},
				"type":{
					"type":"enum",
					"length":"'HOSTING','SERVER'",
					"default":"HOSTING",
					"comment":"미니톡 서버종류(HOSTING:채팅호스팅/SERVER:자체서버)"
				},
				"client_secret":{
					"type":"char",
					"length":32,
					"comment":"서버의 클라이언트 비밀키"
				},
				"channel":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"서버에 개설된 채널갯수"
				},
				"user":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"서버에 접속된 접속자수"
				},
				"status":{
					"type":"enum",
					"length":"'ONLINE','OFFLINE'",
					"default":"OFFLINE",
					"comment":"서버상태"
				},
				"latest_update":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"서버상태 확인일시(UNIXTIME)"
				},
				"connection":{
					"type":"text",
					"is_null":true,
					"comment":"서버에 접속하기 위한 인증문자열"
				}
			},
			"indexes":{
				"domain":"primary_key"
			},
			"comment":"미니톡 서버 테이블"
		}
	}
}