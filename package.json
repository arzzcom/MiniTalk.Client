{
	"id":"com.moimz.minitalk.client",
	"title":"Minitalk",
	"version":"6.4.0",
	"dependencies":{
		"php":"5.3.3",
		"mysql":"5.0.0",
		"curl":"*",
		"encrypt":"*"
	},
	"requirements":{
	},
	"directories":{
		"configs":"0707",
		"logs":"0707"
	},
	"language":"ko",
	"configs":["key","db"],
	"preset":"Minitalk",
	"databases":{
		"broadcast_table":{
			"columns":{
				"id":{
					"type":"char",
					"length":32,
					"comment":"고유값"
				},
				"type":{
					"type":"enum",
					"length":"'NOTICE','MESSAGE'",
					"default":"MESSAGE",
					"comment":"종류"
				},
				"nickname":{
					"type":"varchar",
					"length":20,
					"comment":"닉네임"
				},
				"message":{
					"type":"varchar",
					"length":255,
					"comment":"내용"
				},
				"receiver":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"받은유저수"
				},
				"url":{
					"type":"varchar",
					"length":255,
					"default":0,
					"comment":"링크주소"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"전송일자"
				}
			},
			"indexes":{
				"id":"primary_key",
				"reg_date":"index"
			},
			"comment":"미니톡 브로드캐스트 테이블"
		},
		"category_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"parent":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"1차카테고리"
				},
				"category":{
					"type":"varchar",
					"length":100,
					"comment":"카테고리명"
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"auto_increment":"idx",
			"comment":"미니톡 카테고리 테이블"
		},
		"category_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"parent":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"상위카테고리 고유값"
				},
				"category":{
					"type":"varchar",
					"length":32,
					"comment":"카테고리명"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"parent":"index"
			},
			"auto_increment":"idx",
			"comment":"미니톡 카테고리 테이블"
		},
		"channel_table":{
			"columns":{
				"channel":{
					"type":"varchar",
					"length":32,
					"comment":"채널명"
				},
				"category1":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"1차 카테고리 고유값"
				},
				"category2":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"2차 카테고리 고유값"
				},
				"title":{
					"type":"varchar",
					"length":50,
					"comment":"채널타이틀"
				},
				"user":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"접속자수"
				},
				"max_user":{
					"type":"int",
					"length":11,
					"default":2000,
					"comment":"최대접속자수"
				},
				"server":{
					"type":"varchar",
					"length":100,
					"is_null":true,
					"comment":"서버접속정보"
				},
				"is_nickname":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"TRUE",
					"comment":"닉네임변경가능여부"
				},
				"is_broadcast":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"TRUE",
					"comment":"브로드캐스트수신여부"
				},
				"grade_font":{
					"type":"enum",
					"length":"'ALL','ADMIN','POWERUSER','MEMBER'",
					"default":"ALL",
					"comment":"글꼴설정권한"
				},
				"grade_chat":{
					"type":"enum",
					"length":"'ALL','ADMIN','POWERUSER','MEMBER'",
					"default":"ALL",
					"comment":"채팅가능권한"
				},
				"notice":{
					"type":"varchar",
					"length":255,
					"is_null":true,
					"comment":"공지메시지"
				},
				"password":{
					"type":"varchar",
					"length":30,
					"is_null":true,
					"comment":"채널패스워드"
				}
			},
			"indexes":{
				"channel":"primary_key",
				"category1":"1차카테고리",
				"category2":"2차카테고리"
			},
			"comment":"미니톡 채널 테이블"
		},
		"banip_table":{
			"columns":{
				"ip":{
					"type":"varchar",
					"length":15,
					"comment":"아이피"
				},
				"nickname":{
					"type":"varchar",
					"length":20,
					"is_null":true,
					"comment":"닉네임"
				},
				"memo":{
					"type":"varchar",
					"length":255,
					"is_null":true,
					"comment":"차단사유"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"차단일시"
				}
			},
			"indexes":{
				"ip":"primary_key",
				"reg_date":"index"
			},
			"comment":"미니톡 아이피차단 테이블"
		},
		"history_table":{
			"columns":{
				"id":{
					"type":"char",
					"length":32,
					"comment":"고유값"
				},
				"room":{
					"type":"varchar",
					"length":65,
					"comment":"대화방고유값"
				},
				"message":{
					"type":"text",
					"comment":"대화내용"
				},
				"nickname":{
					"type":"varchar",
					"length":20,
					"comment":"닉네임"
				},
				"user":{
					"type":"text",
					"comment":"유저정보"
				},
				"time":{
					"type":"bigint",
					"length":15,
					"comment":"대화시각"
				},
				"ip":{
					"type":"varchar",
					"length":15,
					"comment":"아이피"
				}
			},
			"indexes":{
				"id":"primary_key",
				"room":"index",
				"time":"index"
			},
			"comment":"미니톡 채팅로그 테이블"
		},
		"server_table":{
			"columns":{
				"domain":{
					"type":"varchar",
					"length":100,
					"comment":"미니톡 서버의 도메인주소 또는 채팅호스팅 클라이언트 아이디"
				},
				"type":{
					"type":"enum",
					"length":"'SERVICE','SERVER'",
					"default":"SERVICE",
					"comment":"미니톡 서버종류(SERVICE:채팅서비스/SERVER:자체서버)"
				},
				"client_secret":{
					"type":"char",
					"length":32,
					"comment":"서버의 클라이언트 비밀키"
				},
				"channel":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"서버에 개설된 채널갯수"
				},
				"user":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"서버에 접속된 접속자수"
				},
				"status":{
					"type":"enum",
					"length":"'ONLINE','OFFLINE'",
					"default":"OFFLINE",
					"comment":"서버상태"
				},
				"latest_update":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"서버상태 확인일시(UNIXTIME)"
				},
				"connection":{
					"type":"text",
					"is_null":true,
					"comment":"서버에 접속하기 위한 인증문자열"
				}
			},
			"indexes":{
				"domain":"primary_key"
			},
			"comment":"미니톡 서버 테이블"
		}
	}
}